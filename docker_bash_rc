#
#  this can be added to  .bashrc to show if and which docker-machine docker is running agains
#
docker_prompt () {
    if [ -z $DOCKER_MACHINE_NAME ]; then
        PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;35m\]\w\[\033[00m\]\$ '
    else
        PS1="\e[35m"[$DOCKER_MACHINE_NAME]:'${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;35m\]\w\[\033[00m\]\$ '
    fi
}
PROMPT_COMMAND=docker_prompt
